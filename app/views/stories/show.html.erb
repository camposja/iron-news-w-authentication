<div class="page-header">
  <%= link_to stories_path, class: 'btn btn-success' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_story_path(@story), class: 'btn btn-success' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Article display</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @story.title %></dd>

  <dt>Link:</dt>
  <dd><%= @story.link %></dd>

  <dt>Email:</dt>
  <dd><%= @story.email %></dd>

  <dt>Image:</dt>
  <dd><%= image_tag(@story.image_url, size: "350") %></dd>

</dl>
