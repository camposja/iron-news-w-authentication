<div class="page-header">
  <h3 Listing>| Iron News |</h3>
</div>

<ul class="list-group">
  <%- @stories.each_with_index do |story, index| %>
    <li class="list-group-item">
      <div class="media">
        <div class="media-left">
          <a href="#">
            <img class="media-object" src="http://rubyonrails.org/images/rails-logo.svg" height="72" width="72">
          </a>
        </div>
        <div class="media-body">
          <h4 class="media-heading"><small><%= index + 1 %></small>.  <%= link_to story.title, story.link %></h4>
          <%= story.email %>
          | <small><%= story.created_at %></small> |

          <div class="pull-right">
            <%= link_to story do %>
              <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
            <% end %>
            <% if logged_in? %>
              <%= link_to edit_story_path(story) do %>
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              <% end %>
            <% end %>
            <% if logged_in? %>
              <%= link_to story, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </li>
  <% end %>
</ul>
