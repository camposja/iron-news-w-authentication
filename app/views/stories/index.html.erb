<div class="page-header">
  <h3 Listing>| Iron News |</h3>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><h6>Story#</h6></th>
        <th><h6>Title</h6></th>
        <th><h6>Contributor email</h6></th>
        <th><h6>Published on: </h6></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="table-body table-striped table-hover">
      <%- @stories.each_with_index do |story, index| %>
      <tr>
        <td><small><%= index + 1 %></small></td>
        <td><small><%= link_to story.title, story.link %></small></td>
        <td><small><%= story.email %></small></td>
        <td><small><%= story.created_at %></small></td>
        <td>
          <%= link_to story do %>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <% end %>
        </td>
        <% if logged_in? %>
        <td>
          <%= link_to edit_story_path(story) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </td>
        <% end %>
        <% if logged_in? %>
        <td>
          <%= link_to story, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
